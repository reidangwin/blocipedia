<div class="container">
  <h1>My Wikis</h1>

  <div class="row">
    <div class="col-md-6 col-md-push-3">
      <table class="table table-striped align-middle">
        <% @wikis.each do |wiki| %>
            <tr class="align-middle">
              <td> <%= wiki.title %> </td>
              <td> <%= link_to 'edit', edit_wiki_path(wiki) %> </td>
              <td><%= link_to "delete", wiki, method: :delete, data: {confirm: 'Are you sure you want to delete this wiki?'} %></td>
            </tr>
        <% end %>
      </table>
      <%= link_to "New Wiki", new_wiki_path, class: 'btn' %>
    </div>
  </div>
</div>